{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DynamicPigeon",
	"scopeName": "source.dp",
	"patterns": [
		{
			"name": "comment.dynamic-pigeon",
			"match": "//.*"
		},
		{
			"name": "keyword.control.escape.dynamic-pigeon",
			"match": "\\b(break|continue|return)\\b"
		},
		{
			"name": "keyword.control.block.dynamic-pigeon",
			"match": "\\b(if|elif|else|while|foreach|fordec|forinc)\\b"
		},
		{
			"name": "keyword.vars.dynamic-pigeon",
			"match": "\\b(locals|as)\\b"
		},
		{
			"name": "entity.name.dynamic-pigeon",
			"match": "\\b(global|func)\\b"
		},
		{
			"name": "keyword.operator.arithmetic.dynamic-pigeon",
			"match": "\\b(add|sub|mul|dec|mod|floor|ceil|round|inc|dec)\\b"
		},
		{
			"name": "keyword.operator.logic.dynamic-pigeon",
			"match": "\\b(eq|neq|not|lt|lte|gt|gte|and|or)\\b"
		},
		{
			"name": "keyword.operator.collections.dynamic-pigeon",
			"match": "\\b(list|map|len|get|set|push|lconcat)\\b"
		},
		{
			"name": "keyword.operator.string.dynamic-pigeon",
			"match": "\\b(charlist|runelist|getchar|getrune|concat)\\b"
		},
		{
			"name": "keyword.operator.misc.dynamic-pigeon",
			"match": "\\b(print|println|prompt|randNum|parseNum)\\b"
		},
		{
			"name": "constant.numeric.dynamic-pigeon",
			"match": "\\b\\d+(\\.\\d*)?\\b"
		},
		{
			"name": "constant.numeric.dynamic-pigeon",
			"match": "\\b(nil|true|false)\\b"
		},
		{
			"name": "string.quoted.double.dynamic-pigeon",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dynamic-pigeon",
					"match": "\\\\."
				}
			]
		}
	]
}